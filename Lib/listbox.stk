(define-binding "Listbox" "<F16>" (|W|)
  (when (equal? (selection 'own :displayof |W|) |W|)
    (clipboard 'clear :displayof |W|)
    (clipboard 'append :displayof |W| (selection 'get :displayof |W|))))

