(define-binding "Listbox" "<Control-End>" (|W|)
  (|W| 'activate 'end)
  (|W| 'see 'end)
  (|W| 'selection 'clear 0 'end)
  (|W| 'selection 'set 'end))

(define-binding "Listbox" "<Shift-Control-End>" (|W|)
